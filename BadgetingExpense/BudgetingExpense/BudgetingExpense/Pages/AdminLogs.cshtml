@page
@using BudgetingExpense.Api.Pages
@model AdminLogsModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Live Logs</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.7/signalr.min.js"></script>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        h2 {
            text-align: center;
            color: #333;
        }

        .controls {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin: 10px 0;
        }

       .controls label {
            font-size: 16px;
            color: #333;
       }

        .logs-container {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        #logs {
            background: #333;
            color: white;
            padding: 20px;
            height: 500px;
            width: 80%;
            overflow-y: auto;
            border-radius: 10px;
            font-family: Consolas, monospace;
        }

        .log-info {
            color: lime;
        }

        .log-warning {
            color: yellow;
        }

        .log-error {
            color: red;
        }

        button {
            padding: 8px 16px;
            background-color: white;
            color: #333;
            border: #333;
            border-radius: 5px;
            cursor: pointer;
        }

        button:hover {
            background-color: #333;
            color: white;
        }
    </style>
</head>
<body>

    <h2>Live Logs</h2>
    <div class="controls">
        <label><input type="checkbox" checked id="info" />Information</label>
        <label><input type="checkbox" checked id="error" />Error</label>
        <button onclick="document.getElementById('logs').textContent = ''">Clear Logs</button>
    </div>

    <div class="logs-container">
        <pre id="logs"></pre>
    </div>

    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/logHub")
            .build();

        connection.on("ReceiveLog", message => {
            if ((message.includes("Information") && !document.getElementById("info").checked) ||
                (message.includes("Error") && !document.getElementById("error").checked)) 
            {
                return;
            }

            const logElement = document.createElement("div");

            let styledMessage = message
               .replace(/Information/g, '<span class="log-info">Information</span>')
               .replace(/Warning/g, '<span class="log-warning">Warning</span>')
               .replace(/Error/g, '<span class="log-error">Error</span>');

            logElement.innerHTML = styledMessage;

            const logsContainer = document.getElementById("logs");
            logsContainer.appendChild(logElement);
            logsContainer.scrollTop = logsContainer.scrollHeight;
        });

        connection.start().catch(err => console.error(err.toString()));
    </script>

</body>
</html>
